<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <RelativeLayout
        android:id="@+id/top_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/tempus"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@id/logo"
            android:src="@drawable/tempus_title" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_menu"
        android:layout_below="@id/top_menu">

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D6D6D6"
            android:padding="10dp"
            tools:context=".StatsFragment">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#D6D6D6"
                android:columnCount="1"
                android:orientation="vertical"
                android:rowCount="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="370dp"
                    android:layout_row="0"

                    android:layout_column="0"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/graph_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="GRAPH"
                            android:textAlignment="center"
                            android:textSize="20dp" />

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/statsChart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/overview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="OVERVIEW"
                            android:textAlignment="center"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/total"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_below="@+id/overview"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:text="Total Hours:"
                            android:textAlignment="center"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/max"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_below="@+id/total"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:text="Maximum:"
                            android:textAlignment="center"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/min"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_below="@+id/max"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:text="Minimum:"
                            android:textAlignment="center"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/stats_breaks"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_below="@+id/min"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:text="Breaks:"
                            android:textAlignment="center"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/total_display"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_below="@+id/overview"
                            android:layout_alignParentEnd="true"
                            android:layout_toRightOf="@+id/total"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:textAlignment="center"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/max_display"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_below="@+id/total"
                            android:layout_alignParentEnd="true"
                            android:layout_toRightOf="@+id/max"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:textAlignment="center"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/min_display"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_below="@+id/max"
                            android:layout_alignParentEnd="true"
                            android:layout_toRightOf="@+id/min"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:textAlignment="center"
                            android:textSize="18dp" />


                        <TextView
                            android:id="@+id/breaks_display"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_below="@+id/min_display"
                            android:layout_alignParentEnd="true"
                            android:layout_toRightOf="@+id/stats_breaks"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:textAlignment="center"
                            android:textSize="18dp" />


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

            </GridLayout>

        </FrameLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/hometbtn"
            android:layout_width="86dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/rectangle"
            android:contentDescription="Home"
            android:padding="5dp"
            android:src="@drawable/home_icon" />

        <ImageButton
            android:id="@+id/breakstbtn"
            android:layout_width="86dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/hometbtn"
            android:background="@drawable/rectangle"
            android:contentDescription="Breaks"
            android:padding="5dp"
            android:src="@drawable/break_icon" />

        <ImageButton
            android:id="@+id/addbtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/breakstbtn"
            android:background="@drawable/gradient_add"
            android:contentDescription="Add"
            android:padding="5dp"
            android:src="@drawable/add_icon" />

        <ImageButton
            android:id="@+id/statstbtn"
            android:layout_width="86dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/addbtn"
            android:background="@drawable/rectangle"
            android:contentDescription="Stats"
            android:padding="5dp"
            android:src="@drawable/stats_icon" />

        <ImageButton
            android:id="@+id/settingstbtn"
            android:layout_width="86dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/statstbtn"
            android:background="@drawable/rectangle"
            android:contentDescription="Setting"
            android:padding="5dp"
            android:src="@drawable/settings_icon" />

    </RelativeLayout>

</RelativeLayout>